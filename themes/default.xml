
<theme>
    <!-- Imports the map file to get the texture maps
	this allows us to to use the same image theme with diffrent themes -->
    <import file="themes/defaultmap.xml"/>

    <widgets>
	<widget name="console" resizable="true">
	    <border top="13" bottom="7" left="2" right="2"><!-- values are the thickness -->
			<close x="2" y="2"/>
	    </border>

	    <child type="editbox" background="inputbox" x="0" y="0" width="%100" move="none" orientation="vertical">
			<dialog type="editbox" background="background.editbox" x="0" y="20" width="%100" move="none" multiline="true"/>
	    </child>
	</widget>
    </widgets>
</theme>
